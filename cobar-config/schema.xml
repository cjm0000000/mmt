    <table dataNode="dn[0]" name="msg_repo_l3"/>
    <table dataNode="dn[0]" name="weixin_config" />
    <table dataNode="dn[0]" name="yixin_config" />
    <!-- 拆分业务数据，这里默认拆分成四分 -->
    <table dataNode="dn$0-3" rule="rule_cust_id" name="access_log" />
